<!doctype html>
<html lang="en">

<head>
  <title>Title</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="../css/index.css">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="./css/index.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
  <div class=" container all">
    <div class="row margin"></div>
    <div class="row">
      <div class="col-3"></div>
      <div class="col-6 main">
        <h3 class="col-12 mt-5 mb-4 title ">Create an Account</h3>
        <form class="col-12" name="form_register" action="" method="post">

          <div class="form-group">
            <label for="">Email</label>
            <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelpId" placeholder="">
            <small id="emailHelpId" class="form-text text-muted"></small>
          </div>

          <div class="form-group">
            <label for="">Password</label>
            <input type="password" class="form-control" name="password" id="password" placeholder="">
          </div>
          <div class="form-group">
            <label for="">Confirm password</label>
            <input type="password" class="form-control" name="password2" id="password2" placeholder="">
            <small id="error-mess" class=" error-mess"></small>
          </div>
          <div class="form-group">
            <label for="">Phone number</label>
            <input type="text" class="form-control" name="phone" id="phone" aria-describedby="helpId" placeholder="">
          </div>
          <button type="submit" id="register-btn" class="col-12 btn btn-secondary mb-3 mt-4"> Sign up</button>
          <div class="col-12 mb-5 note">Already have an accout. <a class="link" href="/login">Login</a></div>
          <div data-value="<%=mess%>" id="mess"  class="col-12 mt-3 mb-3"></div>
         
         

        </form>
      </div>
      <div class="col-3"></div>
    </div>
    <div class="row margin"></div>
  </div>
  <script>
    
    var btn = document.getElementById('register-btn')
    var error_mess = document.getElementById('error-mess')
    var email = document.getElementById('email')
    var phone = document.getElementById('phone')
    var password = document.getElementById('password')
    var password2 = document.getElementById('password2')
    var form = document.forms['form_register']
    console.log(form);
    password2.addEventListener('mouseout', function (e) {
      if (password.value && password2.value) {
        if (password.value == password2.value) {
          error_mess.textContent = "*password this == password that"
          error_mess.style.color = "green"

        }
        else {
          error_mess.textContent = "*password this != password that"
          error_mess.style.color = "red"
          
        }
      }
    })

    btn.addEventListener('click',function (e) {
      if (!password.value || !password2.value || !email.value || !phone.value || password.value != password2.value) {
        e.preventDefault()

      }
    })

    var mess_element = document.getElementById('mess')
      var mess = mess_element.getAttribute('data-value')
       alert(mess)
     
  </script>
  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
    integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
    integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
    crossorigin="anonymous"></script>
</body>

</html>